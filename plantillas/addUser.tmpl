{{define "addUser"}}
{{template "header"}}
	<div class="card">
		<div class="card-header">
			Usuario
		</div>
		<div class="card-body">
			<form method="POST" action="/insert">
				<div class="form-group">
				  <label for="">ID</label>
				  <input type="text" class="form-control" name="id" id="" aria-describedby="helpId" placeholder="">
				  <small id="helpId" class="form-text text-muted">Ingresa el ID</small>
				</div>
				<div class="form-group">
				  <label for="">Nombre</label>
				  <input type="text"
					class="form-control" name="name" id="" aria-describedby="helpId" placeholder="">
				  <small id="helpId" class="form-text text-muted">Ingrese su nombre</small>
				</div>
				<label for="">Apellido</label>
				  <input type="text"
					class="form-control" name="lastname" id="" aria-describedby="helpId" placeholder="">
				  <small id="helpId" class="form-text text-muted">Ingrese el aperllido</small>
				</div>
				<button type="submit" class="btn btn-primary">Enviar datos</button>
	 
			</form>
		</div>
	</div>	

{{template "footer"}}
{{end}}